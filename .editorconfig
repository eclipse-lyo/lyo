# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{java,kt}]
indent_style = space
indent_size = 4
max_line_length = 120

# indent code easily
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 4

[*.{xml,html,js,yml,css}]
indent_style = space
indent_size = 2
max_line_length = 100

[Jenkinsfile]
indent_style = space
indent_size = 2
